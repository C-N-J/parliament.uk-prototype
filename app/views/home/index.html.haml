- title 'beta.parliament.uk Home page' # Special case of a title - home page

%section
  %h1= t('.title')
  .block
    %p= t('.new_website', link: link_to(t('.new_website_link'), 'https://pds.blog.parliament.uk/2017/02/14/a-new-website-for-parliament-first-public-steps/', target: '_blank', title: t('open_new_window'))).html_safe
    %p= t('.old_website', link: link_to(t('.old_website_link'), 'https://www.parliament.uk')).html_safe
%section
  %h2= t('.feedback.title')
  .block
    %p= t('.feedback.provide', link: link_to(t('.feedback.provide_link'), 'https://ukparliament-self.achieveservice.com/en/AchieveForms/?form_uri=sandbox-publish://AF-Process-032e1b1d-958f-4402-9ab2-97a38ed9b899/AF-Stage9b7ecae8-0c85-4ee7-afda-b256cffe5f08/definition.json&redirectlink=%2F&cancelRedirectLink=%2F&category=AF-Category-48936b5c-9329-48c7-a0a5-563463aacadf', target: '_blank', title: t('open_new_window'))).html_safe
%section
  %h2= t('.whats_on.title')
  .block
    %h3= t('.members_info.title')
    %ol.list
      %li.list__item
        %h4= link_to t('mp_plural'), house_members_current_a_z_letter_path(HousesHelper.commons_id, 'a')
        %p= t('.members_info.current_mps')
      %li.list__item
        %h4= link_to t('lord_plural'), house_members_current_a_z_letter_path(HousesHelper.lords_id, 'a')
        %p= t('.members_info.current_lords')
      %li.list__item
        %h4= link_to t('constituency_plural').capitalize, constituencies_current_a_z_letter_path('a')
        %p= t('.members_info.current_constituencies')
      %li.list__item
        %h4= link_to t('parties_and_groups').capitalize, house_parties_current_path(HousesHelper.commons_id)
        %p= t('.members_info.current_parties')
%section
  %h2= t('.follow_progress.title')
  %p= t('.follow_progress.blog', link: link_to(t('.follow_progress.blog_link'), 'https://pds.blog.parliament.uk')).html_safe
