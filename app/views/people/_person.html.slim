=> PUGIN.get_component('modules/card', { \
    title: defined?(person.display_name) ? link_to(person.display_name, person_path(person.id)) : "No Information", \
    house: defined?(person.house.id) ? person.house.id : "Lord", \
    image: [{ src: "http://wraggelabs.com/static/images/default_avatar-2.gif", \
              alt: person.display_name \
           }], \
    details: [{ description: defined?(person.constituency.id) ? link_to(person.constituency.name, constituency_path(person.constituency.id)) : "No Information"}, \
             { description: defined?(person.house.id) ? link_to(person.house.id, house_path(person.house.id)) : "No Information"}, \
             { description: defined?(person.party.id) ? link_to(person.party.name, party_path(person.party.id)) : "No Information"}] \
   })
